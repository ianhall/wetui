<%- model_class = Fountain -%>
<div class="page-header">
  <h1><%=t '.title', :default => Fountain %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @fountain.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:photo_uri) %></dt>
      <dd><pre class="prettyprint"><%= @fountain.photo_uri %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:updated_by) %></dt>
      <dd><pre class="prettyprint"><%= @fountain.updated_by %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fountains_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fountain_path(@fountain), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fountain_path(@fountain),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

